var path = require('path');
var setty = require('setty');
setty.load({profile: './../settings/.config', settingsDir: path.join(__dirname, './../settings')});

var useBuildApp = setty.get('useBuildApp');

var rootPath = path.join(__dirname + '/../');
var spaIndex = useBuildApp ? './../client/main/dist/index.html' : './../client/main/index.html';
var spaLanding = useBuildApp ? './../client/landing/dist/index.html' : './../client/landing/index.html';
var spaIndexHtmlPath = path.join(__dirname, spaIndex);
var spaLandingHtmlPath = path.join(__dirname, spaLanding);

module.exports = {
  root: rootPath,
  env: setty.get("env"),
  isDev: setty.get("env") === 'development',
  port: setty.get("port"),
  loggly: setty.get("loggly"),
  mongo: setty.get("mongo"),
  secrets: setty.get('secrets'),
  rootUrl: setty.get('rootUrl'),
  useBuildApp: setty.get('useBuildApp'),
  emailsSettings: setty.get('emailsSettings'),
  stripeTestSecretKey: setty.get('stripeTestSecretKey'),
  stripeLiveSecretKey: setty.get('stripeLiveSecretKey'),
  stripeTestPublishableKey: setty.get('stripeTestPublishableKey'),
  stripeLivePublishableKey: setty.get('stripeLivePublishableKey'),
  intercomAppId: setty.get('intercomAppId'),
  spaIndexHtmlPath: spaIndexHtmlPath,
  spaLandingHtmlPath: spaLandingHtmlPath
};
